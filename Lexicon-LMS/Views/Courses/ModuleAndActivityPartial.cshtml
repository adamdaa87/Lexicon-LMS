@model TeacherViewModel

<div class="container cont-section" id="cont-modules-and-activities">
    <!--Modules and Activities-->
    <div class="row  row-modules">

        <div id="col-modules" class="col-sm-3 text-center">
            @if (User.IsInRole("Student"))
            {
                <h2 style="margin: 5px 25px 20px 0px">Modules</h2>
            }
            @if (User.IsInRole("Teacher"))
            {
                <div>
                    <h2 style="margin: 5px 25px 20px 0px">
                        Modules<a onclick="showInPopup('@Url.Action($"Create","Modules",
                        new {id= Model.CourseId@*Model.Current.course.Id*@},Context.Request.Scheme)','Add New Module')">
                            <img style="margin: 0px 0px 5px 5px" class="icon-img" id="btn-create" src="~/plus.png" />
                        </a>
                    </h2>
                </div>
            }

            <partial name="ModuleList" model="@Model.ModuleList" />
        </div>
        <div id="col-activities" class="col-sm-9">
            <partial name="ActivityPartial" model="@Model.ModulesActivity" />
        </div>
    </div>
</div>


