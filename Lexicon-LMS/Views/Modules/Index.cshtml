@model IEnumerable<Module>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-success" @*asp-action="Create"*@ data-toggle="ajax-modal" data-target="#createModule" data-url="@Url.Action($"Create" )>Create New</a>
</p>
<div class="accordion" id="accordionExample">
         <div class="panel-group" id="accordionY">
            @{int ij = 1;}
            
   @foreach (var item in Model) {
           <div class="accordion-item">
    <h2 class="accordion-header" id="headingOne">
      <button class="accordion-button accordion-collapse collapsed " type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@ij"  aria-expanded="true" aria-controls="collapseOne">

    <b  runat="server"> Module @item.Id:  @item.ModulName  </b>
      </button>
    </h2>
    </div>

    <div id="collapse_@ij" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
      <div class="accordion-body">
           <dl class="row" >
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => item.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => item.EndDate)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => item.Description)
        </dd>
    </dl>
    <div>
    <a class="btn btn-primary asp-action="Edit" asp-route-id="@item?.Id">Edit</a> 
</div>
</div>
      </div> ij++;}  
    </div>    
    </div>
  <p>
     <a asp-action="Index">Back to List</a>
  </p>

